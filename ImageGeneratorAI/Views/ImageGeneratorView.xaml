<?xml version="1.0" encoding="utf-8" ?>
             
<ContentPage Title="ImageGeneratorView"
             x:Class="ImageGeneratorAI.Views.ImageGeneratorView"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             BackgroundImageSource="background1.jpg">
    
    <Grid Margin="25,25,0,0" RowDefinitions=".2*,.6*,.2*">
        <VerticalStackLayout>
            <Label 
                FontFamily="ExoBlack"
                FontSize="50"
                Text="Picture generated"
                TextColor="White"/>

            <HorizontalStackLayout Margin="0,20,0,0">
                <Label
                    FontSize="20"
                    Text="Time spent "
                    TextColor="#ACB1BB"
                    VerticalOptions="Center"/>
                <Grid>
                    <Border 
                        x:Name="borderTime"
                        Grid.Row="1"
                        BackgroundColor="#E8FF8E"
                        IsVisible="True"
                        Opacity="0"
                        Scale="1.1"
                        StrokeShape="RoundRectangle 5,5,5,5"
                        StrokeThickness="0"/>
                    <Label 
                        FontSize="20"
                        Text="0"
                        TextColor="#ACB1BB"
                        VerticalOptions="Center"/>
                </Grid>
                <Label
                    FontSize="20"
                    Text=" seconds"
                    TextColor="#ACB1BB"
                    VerticalOptions="Center"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
        <Border 
            x:Name="imageBorder"
            IsVisible="False"
            Grid.Row="1"
            StrokeShape="RoundRectangle 30,30,30,30"
            StrokeThickness="0"
            Margin="0,0,20,0">
            <Image Aspect="AspectFill" Source="cartoon.jpg"/>
        </Border>
        <Border 
            x:Name="imageAnimation"
            Grid.Row="1"
            BackgroundColor="#E8FF8E"
            IsVisible="False"
            Opacity=".9"
            StrokeShape="RoundRectangle 30,30,30,30"
            StrokeThickness="0">
        </Border>
        
        <skia:SKLottieView
            x:Name="lottie"
            Grid.Row="1"
            IsAnimationEnabled="True"
            RepeatCount="-1"
            Source="robot.json"/>
        
        <Button
            x:Name="btnFinish"
            Clicked="btnFinish_Clicked"
            Grid.Row="2"
            BackgroundColor="#E8FF8E"
            CornerRadius="35"
            FontSize="25"
            FontFamily="ExoBlack"
            HeightRequest="75"
            HorizontalOptions="Center"
            Scale="0.1"
            Text="Finish"
            TextColor="#101216"
            VerticalOptions="Center"
            WidthRequest="250"/>
    </Grid>
</ContentPage>