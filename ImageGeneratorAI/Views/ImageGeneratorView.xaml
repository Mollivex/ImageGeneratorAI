<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ImageGeneratorAI.Views.ImageGeneratorView"
             Title="ImageGeneratorView"
             BackgroundImageSource="background1.jpg">
    
    <Grid Margin="25,25,0,0" RowDefinitions=".2*,.6*,.2*">
        <VerticalStackLayout>
            <Label 
                FontFamily="ExoBlack"
                FontSize="50"
                Text="Picture generated"
                TextColor="White"/>
            <Label 
                Margin="0,10,0,0"
                FontSize="20"
                Text="Time spent 30 seconds"
                TextColor="#ACB1BB"/>
        </VerticalStackLayout>
        <Border Grid.Row="1"
                StrokeShape="RoundRectangle 30,30,30,30"
                StrokeThickness="0"
                Margin="0,0,20,0">
            <Image Aspect="AspectFill" 
                   Source="menu.jpg"/>
        </Border>
        <Button
            Grid.Row="2"
            BackgroundColor="#E8FF8E"
            CornerRadius="35"
            FontSize="25"
            FontFamily="ExoBlack"
            HeightRequest="75"
            HorizontalOptions="Center"
            Text="Finish"
            TextColor="#101216"
            VerticalOptions="Center"
            WidthRequest="250"/>
    </Grid>
</ContentPage>